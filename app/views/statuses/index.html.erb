<p id="notice"><%= notice %></p>

<h1>Statuses</h1>

<table>
  <thead>
    <tr>
      <th>Temperature</th>
      <th>Air humidity</th>
      <th>Carbon monoxide</th>
      <th>Health status</th>
      <th>Collected at</th>
      <th>Device</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @statuses.each do |status| %>
      <tr>
        <td><%= status.temperature %></td>
        <td><%= status.air_humidity %></td>
        <td><%= status.carbon_monoxide %></td>
        <td><%= status.health_status %></td>
        <td><%= status.collected_at %></td>
        <td><%= status.device_id %></td>
        <td><%= link_to 'Show', status %></td>
        <td><%= link_to 'Edit', edit_status_path(status) %></td>
        <td><%= link_to 'Destroy', status, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
