<!DOCTYPE html>
<html>
  <head>
    <title>TheoremAc</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if admin_signed_in? %>
      Logged in as: <%= current_admin.full_name || current_admin.email %>
      <%= link_to('Logout', destroy_admin_session_path, method: :delete) %>
  <% else %>
        <%= link_to('Login', new_admin_session_path) %>
  <% end %>
  <nav>
    <ul>
      <li><%= link_to 'Devices', devices_path %></li>
      <li><%= link_to 'Admins', admins_path %></li>
      <li><%= link_to 'Invite Admin', new_admin_invitation_path %></li>
    </ul>
  </nav>
    <%= yield %>
  </body>
</html>
